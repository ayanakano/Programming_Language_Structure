int sum_square(int n);
int** is_pyth(int n);
int test_pyth(int a, int b, int c);

int main()
{
	printf ("1. is %i\r\n",sum_square(5));
	int** result = is_pyth(10);
	int res = result[0][0];
	printf ("2. is %d\r\n",res);
	int i;
	for(i = 0; i < 5; i++)
			free(result[i]);
	free(result);
	return 0;
}

int sum_square(int n)
{
	int i;
	int sum = 0;
	for(i = 1; i <= n; i++)
		sum+=i*i;
	return sum;
}

int** is_pyth(int n)
{
	int** result = malloc(5*sizeof(int*));
	int c;
	int a;
	int b;
	int i = 0;
	for(c = 1; c <= n ; c++)
	{
		for(a = 1; a < c ; a++)
		{
			for(b = 1; b < c ; b++)
			{
				if(test_pyth(a, b ,c))
				{
					result[i] = malloc(3 * sizeof(int));
					result[0] = a;
					result[1] = b;
					result[2] = c;
					i++;
				}
			}	
		}
	}
	return result;
}

int test_pyth(int a, int b, int c)
{
	if(a*a + b*b == c*c)
		return 1;
	else
		return 0;
}