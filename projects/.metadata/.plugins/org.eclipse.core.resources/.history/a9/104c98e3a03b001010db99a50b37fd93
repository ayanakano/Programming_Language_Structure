int sum_square(int n)
{
	int i;
	int sum = 0;
	for(i = 1; i <= n; i++)
		sum+=i*i;
	return sum;
}

int** is_pyth(int n)
{
	int** result = malloc(5*sizeof(int*));
	int c;
	int a;
	int b;
	int i = 0;
	for(c = 1; c <= n ; c++)
	{
		for(a = 1; a < c ; a++)
		{
			for(b = 1; b < c ; b++)
			{
				if(test_pyth(a, b ,c))
				{
					result[i] = malloc(3 * sizeof(int));
					result[i][0] = a;
					result[i][1] = b;
					result[i][2] = c;
					i++;
				}
			}	
		}
	}
	return result;
}

int test_pyth(int a, int b, int c)
{
	if(a*a + b*b == c*c)
		return 1;
	else
		return 0;
}