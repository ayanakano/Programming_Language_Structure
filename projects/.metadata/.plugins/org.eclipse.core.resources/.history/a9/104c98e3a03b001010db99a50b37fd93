#include <stdio.h>

int sum_square(int n);
int** is_pyth(int n);
int test_pyth(int a, int b, int c);


int main()
{
	printf ("1. is %i\r\n",sum_square(5));
	int** result = is_pyth(10);
	printf ("2. is %i %i %i\r\n",result[0][0],result[0][1],result[0][2]);
	
	/*result[3] = malloc(3 * sizeof(int));
