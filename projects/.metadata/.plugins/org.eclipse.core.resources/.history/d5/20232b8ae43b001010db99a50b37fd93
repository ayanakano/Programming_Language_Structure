int sum_square(int n)
{
	int i;
	int sum = 0;
	for(i = 1; i <= n; i++)
		sum+=i*i;
	return sum;
}
void is_pyth(int n, struct NODE *llist)
{
	int* result;
	int c;
	int a;
	int b;
	for(c = 1; c <= n ; c++)
	{
		for(a = 1; a < c ; a++)
		{
			for(b = 1; b < c ; b++)
			{
				if(test_pyth(a, b ,c))
				{
					result = malloc(3 * sizeof(int));
					result[0] = a;
					result[1] = b;
					result[2] = c;
					append_node_array(llist, result);
				}
			}	
		}
	}
}
