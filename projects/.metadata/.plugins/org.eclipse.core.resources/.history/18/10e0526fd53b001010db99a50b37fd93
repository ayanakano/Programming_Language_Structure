int test_pyth(int a, int b, int c)
{
	if(a*a + b*b == c*c)
		return 1;
	else
		return 0;
}
void perfectInt(int n,struct NODE *llist)
{
	struct NODE * llist1;
	int i;
	int suma = 0;
	llist1 = (struct NODE *)malloc(sizeof(struct NODE));
	for( i = 1; i <= n; i++)
	{
		divisors(i, llist1);
		//suma = sum(llist1);
		if(sum(llist1)==i)
		{
			append_node(llist, i);
		}
		llist1 = (struct NODE *)malloc(sizeof(struct NODE));
	}
}

void divisors(int n, struct NODE *llist1)
{
	int i;
	for(i = 1; i < n; i++)
	{
		if((n % i) == 0)
			append_node(llist1, i);
	}
}

